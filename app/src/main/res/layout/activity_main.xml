<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ibm.tipcalculater.MainActivity"
    android:columnCount="2"
    android:useDefaultMargins="true"
    android:layout_gravity="fill_horizontal|fill">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="0"
        android:id="@+id/AmounteditText"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:digits="0123456789"
        android:maxLength="6"
        android:layout_gravity="fill_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amounttextView"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="2"
        android:hint="@string/enter_amount"
        android:layout_gravity="fill_horizontal|fill"
        android:background="@color/amount_background"
        android:padding="@dimen/textview_padding"
        android:elevation="@dimen/elevation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/percenttextView"
        android:text="@string/tip_percenatge"
        android:layout_gravity="right" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="@dimen/seek_bar_hight"
        android:id="@+id/percentSeekBar"
        android:layout_gravity="fill_horizontal|fill"
        android:max="30"
        android:progress="15" />

    <TextView
        android:text="@string/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tipLableTextView"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tipTextView"
        android:layout_gravity="fill_horizontal"
        android:background="@color/result_background"
        android:padding="@dimen/textview_padding"
        android:gravity="center"
        android:elevation="@dimen/elevation" />

    <TextView
        android:text="@string/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalLabelTextView"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totaltextView"
        android:layout_gravity="fill_horizontal"
        android:background="@color/result_background"
        android:padding="@dimen/textview_padding"
        android:gravity="center"
        android:elevation="@dimen/elevation" />
</GridLayout>
